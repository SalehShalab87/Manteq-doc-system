# Manteq Document System - Environment Variables Template
# Copy this file to .env and update with your actual values

# Database Configuration (default for Docker Compose)
DB_SERVER=sqlserver
DB_DATABASE=CmsDatabase_Dev
DB_USER=sa
DB_PASSWORD=ManteqSystem@2025

# SMTP Configuration (Required for Email Service)
# For Outlook/Hotmail
SMTP_HOST=smtp-mail.outlook.com
SMTP_PORT=587
SMTP_ENABLE_SSL=true
SMTP_USERNAME=your-email@outlook.com
SMTP_PASSWORD=your-app-password

# For Gmail
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_ENABLE_SSL=true
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Application URLs (default for Docker Compose)
CMS_BASE_URL=http://cms-api:5000
TMS_BASE_URL=http://tms-api:5267
EMAIL_BASE_URL=http://email-service:5030

# External Access (localhost mapping)
CMS_EXTERNAL_URL=http://localhost:5000
TMS_EXTERNAL_URL=http://localhost:5267
EMAIL_EXTERNAL_URL=http://localhost:5030
